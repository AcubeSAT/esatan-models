    reference = "Battery_4:volume1",
    value = 0.02);

BOUNDARY_CONDITION EPS_heat;
EPS_heat = TOTAL_AREA_HEAT_LOAD (
    reference = "PCB_Batteries:surface2",
    value = 0.22);

BOUNDARY_CONDITION Sun_Sensor_Heat;
Sun_Sensor_Heat = TOTAL_AREA_HEAT_LOAD (
    reference = "Sun_Sensor",
    value = 0.05);

BOUNDARY_CONDITION comms_UHF_heat;
comms_UHF_heat = TOTAL_AREA_HEAT_LOAD (
    reference = "COMMS_PAUHF",
    value = COMMS_PA_UHF_Dissipation);

BOUNDARY_CONDITION comms_mcu_heat;
comms_mcu_heat = TOTAL_AREA_HEAT_LOAD (
    reference = "COMMS_MCU",
    value = COMMS_MCU_Dissipation);

BOUNDARY_CONDITION sideheaters_chip_maintenance;
sideheaters_chip_maintenance = TOTAL_AREA_HEAT_LOAD (
    reference = "side_heaters",
    value = 4.0,
    heater_control_method = "Thermostat",
    thermostat_ref = "Chip_Glass_1:face13",
    measurement_method = "Single",
    on_temperature = 5.0,
    off_temperature = 8.0,
    mode_transient = "Proportional",
    mode_steady_state = "Proportional",
    load_damping_ss = 0.01);
